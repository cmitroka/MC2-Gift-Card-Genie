<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:focusable="true"
	 android:focusableInTouchMode="true"
    tools:context="com.mc2techservices.gcg.NativeAddModLookupActivity" >
    
 <LinearLayout
     android:id="@+id/llCardInfoGeneral"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="5dp"
     android:layout_marginRight="5dp"
     android:layout_marginTop="5dp"
     android:background="@drawable/selector_fieldset_background"
     android:orientation="vertical"
     android:paddingLeft="5dp"
     android:paddingRight="5dp" >

     <TextView
         android:id="@+id/lblHeaderGCI"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="General Card Info"
         android:textSize="14sp" />

     <LinearLayout
         android:id="@+id/llCardTypeSubType"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/txtCellBalDate"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:text="Card:"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textSize="16sp"
             android:textStyle="bold" />

         <EditText
             android:id="@+id/txtGCICardType"
             android:layout_width="fill_parent"
             android:layout_height="31dp"
             android:layout_weight="1"
             android:ems="10"
             android:hint="Home Depot, TD Bank, Etc."
             android:imeOptions="actionDone"
             android:padding="2dp"
             android:singleLine="true"
             android:textSize="16sp">

         </EditText>

     </LinearLayout>

     <LinearLayout
         android:id="@+id/llCardURL"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/TextView04"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:text="URL:"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textSize="16sp"
             android:textStyle="bold" />

         <EditText
             android:id="@+id/txtGCIURL"
             android:layout_width="fill_parent"
             android:layout_height="31dp"
             android:layout_weight="1"
             android:ems="10"
             android:hint="http://... url of website lookup"
             android:imeOptions="actionDone"
             android:padding="2dp"
             android:singleLine="true"
             android:textSize="16sp" />

     </LinearLayout>

     <LinearLayout
         android:id="@+id/llLoginPassword"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="bottom">

         <TextView
             android:id="@+id/TextView05a"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:text="Login:"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textSize="16sp" />

         <EditText
             android:id="@+id/txtGCILogin"
             android:layout_width="fill_parent"
             android:layout_height="31dp"
             android:layout_weight="1"
             android:ems="10"
             android:imeOptions="actionDone"
             android:inputType="text"
             android:padding="2dp"
             android:textSize="16sp" />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Password:"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textSize="16sp" />

         <EditText
             android:id="@+id/txtGCIPassword"
             android:layout_width="fill_parent"
             android:layout_height="31dp"
             android:layout_weight="1"
             android:ems="10"
             android:imeOptions="actionDone"
             android:inputType="textPassword"
             android:padding="2dp"
             android:textSize="16sp" />
     </LinearLayout>

 </LinearLayout>

 <LinearLayout
     android:id="@+id/llCardInfoDetails"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_margin="5dp"
     android:background="@drawable/selector_fieldset_background"
     android:orientation="vertical"
     android:paddingLeft="5dp"
     android:paddingRight="5dp" >

         <TextView
             android:id="@+id/lblHeaderDetails"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="Card Details (some may not apply)"
             android:textSize="14sp" />

         <LinearLayout
             android:id="@+id/llCardNumber"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="bottom" >

             <TextView
                 android:id="@+id/txtCellBHDate"
                 android:layout_width="75dp"
                 android:layout_height="wrap_content"
                 android:text="Card #:"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="16sp"
                 android:textStyle="bold" />

             <EditText
                 android:id="@+id/txtCDCardNumber"
                 android:layout_width="fill_parent"
                 android:layout_height="31dp"
                 android:layout_weight="1"
                 android:ems="10"
                 android:imeOptions="actionDone"
                 android:inputType="text|number"
                 android:padding="2dp"
                 android:textSize="16sp" />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/llPINCVV"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="bottom" >

             <TextView
                 android:id="@+id/TextView05"
                 android:layout_width="75dp"
                 android:layout_height="wrap_content"
                 android:text="Card PIN:"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="16sp" />

             <EditText
                 android:id="@+id/txtCDCardPIN"
                 android:layout_width="fill_parent"
                 android:layout_height="31dp"
                 android:layout_weight="1"
                 android:ems="10"
                 android:imeOptions="actionDone"
                 android:inputType="text|number"
                 android:padding="2dp"
                 android:textSize="16sp" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/llCardOther"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="bottom" >

             <TextView
                 android:layout_width="75dp"
                 android:layout_height="wrap_content"
                 android:text="Other Info:"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="16sp" />

             <EditText
                 android:id="@+id/txtCDOtherInfo"
                 android:layout_width="fill_parent"
                 android:layout_height="31dp"
                 android:layout_weight="1"
                 android:ems="10"
                 android:imeOptions="actionDone"
                 android:padding="2dp"
                 android:singleLine="true"
                 android:textSize="16sp" />

         </LinearLayout>
 </LinearLayout>

 <LinearLayout
     android:id="@+id/llSaveDel"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:orientation="horizontal" >

     <Button
         android:id="@+id/cmdSave"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="onClickSaveCard"
         android:text="Save" />

     <Button
         android:id="@+id/cmdDelete"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="onClickDeleteCard"
         android:text="Delete" />
 </LinearLayout>

    <LinearLayout
        android:id="@+id/llLookupAdjBal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/cmdLookup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickLookupBalance"
            android:enabled="false"
            android:text="Lookup" />

        <Button
            android:id="@+id/cmdAdjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickAdjustBalance"
            android:text="Adjust Balance" />

    </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical" >

    
    <LinearLayout
        android:id="@+id/llAMBalHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtCellBHBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date                                          Balance"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>
		</ScrollView>     
    
</LinearLayout>