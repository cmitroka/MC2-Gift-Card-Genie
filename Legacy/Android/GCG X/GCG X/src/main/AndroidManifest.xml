<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mc2techservices.gcg"
    android:versionCode="4"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="GCG X"
        android:theme="@style/AppTheme"
		>
        <activity
            android:name=".AutoStartActivity"
            android:noHistory="true"
			>
        </activity>
        <activity
            android:name=".PurchaseOldActivity"
            android:noHistory="true"
			>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
			>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Registration"
			>
        </activity>
        <activity
            android:name=".WebformActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".SplashscreenActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfirmLoginActivity"
            android:noHistory="true"
			>
        </activity>
        <activity
            android:name=".PurchaseActivity"
            android:noHistory="true"
			>
        </activity>
        <activity 
            android:name=".TestAreaActivity" 
            android:theme="@android:style/android:Theme.Black.NoTitleBar"
            >
        </activity>
        <activity
            android:name=".OverlayActivity"
            android:label="@string/title_activity_overlay" 
            android:theme="@style/TransparentV1"
            >
        </activity>
    </application>

</manifest>
