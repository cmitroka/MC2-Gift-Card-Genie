<resources>
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar"></style>
    <style name="AppThemeLight" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen"></style>
    	
	<style name="Transparent" parent="android:Theme">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
		<item name="android:colorForeground">@android:color/white</item>
	</style>

	<style name="TransparentV1" parent="android:Theme">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@color/transparent50pct</item>
	    <item name="android:windowNoTitle">true</item>
	</style>
	
	
	<color name="transparent">#00000000</color>
	<color name="transparent50pct">#7F000000</color>
	<color name="white">#FFFFFF</color>
    <color name="silver">#C0C0C0</color>
 	<color name="gray">#808080</color>
</resources>