<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mc2techservices.gcbg"
    android:versionCode="9"
    android:versionName="2016.12.11" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="Gift Card Balance Grabber"
        android:theme="@style/AppTheme" >

        <!-- This meta-data tag is required to use Google Play Services. -->

        <activity
            android:name="com.mc2techservices.gcbg.PurchaseOptionsActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.RegisterActivity"
            android:label="Registration" >
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.WebformActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.SplashscreenActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.ConfirmLoginActivity"
            android:noHistory="true" >
        </activity>
        <activity android:name="com.mc2techservices.gcbg.PurchaseActivity" >
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.InitActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.mc2techservices.gcbg.WatchAdActivity"
            android:label="@string/title_activity_watch_ad"
            android:noHistory="true" >
        </activity>
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.mc2techservices.gcbg.ManualLookupActivity"
            android:label="@string/title_activity_manual_lookup" >
        </activity>
    </application>

</manifest>