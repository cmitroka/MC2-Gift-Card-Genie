<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/screen_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Purchase Options" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Thank you for your interest in Gift Card Genie X!  You&apos;ve put in some cards, gotten some successful responses - how about helping us out?  Here are some things you can do!"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Button1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:onClick="onPurchase15Clicked"
	            android:layout_marginTop="20dp"
                android:text="Purchase 15 Lookups" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:onClick="onPurchaseInfClicked"
                android:text="Purchase Infinite Lookups" />

                        <Button
                            android:id="@+id/Button01"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:onClick="onClickCancel"
                            android:text="Cancel" />
            
            </LinearLayout>
    </LinearLayout>

</FrameLayout>
