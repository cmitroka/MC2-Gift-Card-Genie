<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mc2techservices.gcbg.ManualLookupActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblCardNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card #:"
            android:width="60dp" />

        <EditText
            android:id="@+id/txtCardNum"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:background="#FFF"
            android:padding="2dp"
            android:text="Card Number"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblCardPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN #:"
            android:width="60dp" />

        <EditText
            android:id="@+id/txtCardPIN"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="#FFF"
            android:minWidth="100dp"
            android:padding="2dp"
            android:text="Card PIN"
            android:textSize="10dp" />

        <Button
            android:id="@+id/cmdUpdateBalance"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:onClick="onUpdateBalanceClick"
            android:text="Update Balance" />
        
    </LinearLayout>

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
