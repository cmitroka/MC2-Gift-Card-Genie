<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    tools:context="com.mc2techservices.YMCA_Check_In.ContactActivity" >

    <TextView
        android:id="@+id/tvDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Something Busted?"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvNagStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDots"
        android:layout_centerHorizontal="true"
        android:text="We want to know about it; preferably before leaving us a terrible review.  Chances are we have no idea thereâ€™s an issue, but can get it fixed in less than 24 hours." />

    <Button
        android:id="@+id/cmdSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNagStatus"
        android:layout_centerHorizontal="true"
        android:minWidth="100dp"
        android:onClick="emailBug"
        android:text="Report A Bug" />

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNagStatus"
        android:layout_below="@+id/TextView02"
        android:text="We want to hear it!  Feedback from you on how to make this app better gets heard and (if possible/reasonable) put in the next release!" />

    <Button
        android:id="@+id/cmdResetApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoading"
        android:layout_centerHorizontal="true"
        android:minWidth="100dp"
        android:onClick="emailSuggestion"
        android:text="Make a Suggestion" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Got an Idea?"
        android:textSize="24sp" />

</RelativeLayout>