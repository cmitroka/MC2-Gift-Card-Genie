<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mc2techservices.gcg.PasteUserDataActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/cmdPCardNumber"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:text="Card #"/>

        <Button
            android:id="@+id/cmdPCardPIN"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:onClick="onClickCardPIN"
            android:text="Card PIN"/>

        <Button
            android:id="@+id/cmdPLogin"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:text="Login"/>

        <Button
            android:id="@+id/cmdPPassword"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:text="Password"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
